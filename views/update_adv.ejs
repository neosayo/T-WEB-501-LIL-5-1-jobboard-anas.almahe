  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/advList"><i class="fas fa-angle-double-left"></i> All Jobs</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Job</h2>
            <span class="text-light">Use the below form to Update a Job</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_adv" class="classForm">
    <div class="new_user">
        <input type="hidden" name="id" value="<%= advertisement._id %>">
        <div class="form-group">
            <label for="jobName" class="text-light">job name</label>
            <input type="text" name="jobName" value="<%= advertisement.jobName %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="location" class="text-light">location</label>
            <input type="hidden" name="" value="">
            <input type="text" name="location" value="<%= advertisement.location %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="number" class="text-light">salary</label>
            <input type="number" name="salary" value="<%= advertisement.salary %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="description" class="text-light">description</label>
            <input type="text" name="description" value="<%= advertisement.description %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="detailed_description" class="text-light">detailed description</label>
            <input type="text" name="detailed_description" value="<%= advertisement.detailed_description %>" placeholder="">
        </div>
    </div>
        
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
