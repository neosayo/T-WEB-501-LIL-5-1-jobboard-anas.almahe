
<!-- include header -->
<%- include('include/_headerApplyList') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/applyList"><i class="fas fa-angle-double-left"></i> All Apply</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Apply</h2>
            <span class="text-light">Use the below form to Update an Apply</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_apply" class="classForm">
    <div class="new_user">
        <input type="hidden" name="id" value="<%= apply._id %>">
        <div class="form-group">
            <label for="firstName" class="text-light">First Name</label>
            <input type="text" name="firstName" value="<%= apply.firstName %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="lastName" class="text-light">Last Name</label>
            <input type="hidden" name="" value="">
            <input type="text" name="lastName" value="<%= apply.lastName %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="location" class="text-light">Location</label>
            <input type="text" name="location" value="<%= apply.location %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">email</label>
            <input type="email" name="email" value="<%= apply.email %>" placeholder="">
        </div>
        <div class="form-group">
            <label for="studies" class="text-light">Studies</label>
            <input type="text" name="studies" value="<%= apply.studies %>" placeholder="">
        </div>
    </div>
        
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

