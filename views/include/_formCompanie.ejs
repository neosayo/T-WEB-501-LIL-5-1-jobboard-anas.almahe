 <!-- form handling -->
 <form action="/api/companies" method="POST" class="classForm littleForm">
    <div class="new_user">
        <div class="form-group">
            <label for="companieName" class="text-light">Companie Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="companieName" value="" placeholder="Orange, IBM, ...">
        </div>
        <div class="form-group">
            <label for="location" class="text-light">Location</label>
            <input type="text" name="location" value="" placeholder="City">
        </div>
        <div class="form-group">
            <label for="siret" class="text-light">siret number</label>
            <input type="number" name="siret" value="" placeholder="number...">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">email</label>
            <input type="email" name="email" value="" placeholder="example@gmail.com">
        </div>
        
        
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>