 <!-- form handling -->
 <form action="/signup" method="POST" class="classForm littleForm">
    <div class="new_user">
        <div class="form-group">
            <label for="firstName" class="text-light">First Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="firstName" value="" placeholder="Maxence">
        </div>
        <div class="form-group">
            <label for="lastName" class="text-light">Last Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="lastName" value="" placeholder="EL KHADER">
        </div>
        <div class="form-group">
            <label for="location" class="text-light">Location</label>
            <input type="text" name="location" value="" placeholder="City">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="password" class="text-light">Password</label>
            <input type="password" name="password" value="" placeholder="123456789">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" >
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>