<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>IndeedDuPauvre</title>
  <link rel="stylesheet" href="http://localhost:3000/css/style.css">
  <script src="/js/index.js"></script>
</head>

<body>

  <!-- include header -->
  <%- include('include/_header') %>
    <!-- /include header -->
    <div class="container">
      <a href="/signup" class="add-user">SIGN UP</a>
      <h2>Se connecter</h2>
      <div class="index">
        <form action="/login" method="POST" id="add_user" class="littleForm">
          <div class="add_user">
            <div class="form-group">
              <label for="email" class="text-light">email</label>
              <input type="text" name="email" value="" placeholder="exemple@gmail.com">
            </div>
            <div class="form-group">
              <label for="lastName" class="text-light">password</label>
              <input type="password" name="password" value="" placeholder="123">
            </div>
            <div class="form-group">
              <button type="submit" class="btn text-dark update">Save</button>
            </div>
          </div>
      </div>
      </form>
    </div>
    <!-- include footer -->
    <%- include('include/_footer') %>
      <!-- /include footer -->

</body>

</html>