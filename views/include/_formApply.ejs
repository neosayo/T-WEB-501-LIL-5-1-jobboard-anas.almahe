 <!-- form handling -->
 <form action="/api/apply" method="POST" class="classForm">
    <input type="hidden" name="advertisementId" value="<%= advertisementId %>">
    <div class="new_user">
        <div class="form-group">
            <label for="firstName" class="text-light">First Name</label>
            <input type="text" name="firstName" value="" placeholder="Maxence">
        </div>
        <div class="form-group">
            <label for="lastName" class="text-light">Last Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="lastName" value="" placeholder="EL KHADER">
        </div>
        <div class="form-group">
            <label for="location" class="text-light">Location</label>
            <input type="text" name="location" value="" placeholder="City">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="phone" class="text-light">Phone</label>
            <input type="number" name="phone" value="" placeholder="0707070707">
        </div>
        <div class="form-group">
            <label for="studies" class="text-light">Studies</label>
            <input type="text" name="studies" value="" placeholder="School...">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>